{
  "name": "1st-line-training-portal",
  "version": "2.1.24",
  "description": "Training Portal Cloud Edition",
  "main": "electron-main.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder -p always"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jacopersonal1-sys/1st-line-training-portal.git"
  },
  "author": "Admin",
  "license": "ISC",
  "dependencies": {
    "env-paths": "^2.2.1",
    "fs-extra": "^11.2.0",
    "electron-updater": "^6.1.8"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.1stline.trainingportal",
    "productName": "1st Line Training Portal",
    "publish": [
      {
        "provider": "github",
        "releaseType": "release"
      }
    ],
    "win": {
      "target": ["nsis"]
    },
    "files": [
      "**/*",
      "!database.json",
      "!backups/**/*",
      "!save_data.php",
      "!server.js"
    ]
  }
}